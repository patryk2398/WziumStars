@model WziumStars.Models.ViewModels.PodkategoriaAndKategoriaViewModel
@using WziumStars.Extensions
@{
    ViewData["Title"] = "Usun";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="paddingX">
    <h1 class="mb-4">Usuń</h1>
    <form asp-action="Usun">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Podkategoria.Name" class="control-label"></label>
            </div>
            <div class="col-5">
                <input disabled asp-for="Podkategoria.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Podkategoria.Kategoria" class="control-label"></label>
            </div>
            <div class="col-5">
                <input disabled asp-for="Podkategoria.Kategoria.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackButtonPartial" model="Model.Podkategoria.Id" />
            </div>
        </div>
    </form>
</div>
